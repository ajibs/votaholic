
<section class="container-fluid dark-section">
  <div class="form-container col-md-4 col-md-offset-4 col-sm-6 col-sm-offset-6">
    <h2 class="super-title">Login</h2>  
    <% if (message.length > 0) { %>
        <div class="alert alert-danger">
          <%= message %>
        </div>
      <% } %>
    <form action="/login" method="post">
      <div class="form-group">
        <label for="inputUserName">Username</label>
        <input type="text" name="username" class="form-control" placeholder="Enter username" minlength="3">            
      </div>
      <div class="form-group">
        <label for="inputPassword">Password</label>
        <input type="password" name="password" class="form-control" placeholder="Enter password" minlength="5">      
      </div>
      <button type="submit" class="btn btn-primary btn-lg">Submit</button>
    </form>
  </div>
</section>